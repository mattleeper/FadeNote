@model FadeNote.Web.Models.NewNoteViewModel

<div class="page-header">
    <h2>Share Self Burning Secret Notes</h2>
</div>
<div>
    @using (Html.BeginForm("Note", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Content, new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PIN, new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.PIN, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MaxReads, new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.MaxReads, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Expiry, new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Expiry, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
            }
        </div>
